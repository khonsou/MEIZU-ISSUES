<div class="account-container row-fluid" id="lost-password">
  <div class="header">
    <span class="title"><%=l(:label_password_lost)%></span>
  </div>
  <div class="body">
    <%= form_tag(lost_password_path) do %>
      <div class="box tabular">
        <p>
          <label for="mail"><%=l(:field_mail)%> <span class="required">*</span></label>
          <%= text_field_tag 'mail', nil, :size => 40, class: 'span24' %>
          <br>
          <%= submit_tag l(:button_submit), class: 'button blue' %>
        </p>
      </div>
    <% end %>
  </div>
</div>